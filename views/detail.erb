<body>
  <!-- メインヘッダー -->
  <div>
    <header><h1>メモアプリ</h1></header>
  </div>
  <!-- ページヘッダー -->
  <div class="h-container">
    <h2>詳細</h2>
    <form action="/memos" method="GET">
      <button type="submit" id="btn_return">戻る</button>
    </form>
  </div>
  <!-- コンテンツ -->
  <!-- データ表示 -->
  <section>
    <div class="v-container">
      <label for="view_title">タイトル</label>
      <input type="text" name="view_title" id="view_title" value=<%= escape_html(@memo['title']) %> readonly>
    </div>
    <div class="v-container">
      <label for="view_content">内容</label>
      <textarea
        name="view_content"
        id="view_content"
        cols="50"
        rows="10"
        wrap="soft"
        readonly
      ><%= escape_html(@memo['contents']) %></textarea>
    </div>
  </section>
  <!-- ボタン -->
  <section class="h-container">
    <form action="/memos/<%= @memo['id'] %>/edit" method="GET">
      <button type="submit" name="btn_edit" id="btn_edit">変更</button>
    </form>
    <form action="/memos/<%= @memo['id'] %>" method="POST">
      <button type="submit" name="btn_delete" id="btn_delete">削除</button>
      <input type="hidden" name="_method" value="DELETE">
    </form>
  </section>
</body>
