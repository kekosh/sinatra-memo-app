<body>
  <!-- メインヘッダー -->
  <div>
    <header><h1>メモアプリ</h1></header>
  </div>
  <!-- ページヘッダー -->
  <div class="h-container">
    <h2>メモ一覧</h2>
    <form action="/new" method="GET">
      <input type="submit" id="btn_new" value="追加" />
    </form>
  </div>
  <!-- コンテンツ -->
  <section>
    <ul>
      <% @data_list.each do |memo| %>
      <li><a href="/detail/<%= memo['id'] %>"><%= escape_html(memo['title']) %></a></li>
      <% end %>
    </ul>
  </section>
</body>
